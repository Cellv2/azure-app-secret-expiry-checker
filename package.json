{
    "name": "azure-app-secret-expiry-checker",
    "version": "0.0.1",
    "description": "A CLI to check on Azure AD Enterprise Applications and the secret expiry dates",
    "main": "build/index.js",
    "scripts": {
        "start": "ts-node-dev --respawn src",
        "build": "npm run build:clean && tsc",
        "build:clean": "rimraf ./build",
        "view:coverage": "serve coverage/lcov-report",
        "test": "jest --coverage",
        "test:clean": "rimraf coverage",
        "test:watch": "jest --coverage --watchAll"
    },
    "author": "Cellv2",
    "license": "MIT",
    "devDependencies": {
        "@microsoft/microsoft-graph-types": "^1.32.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.31",
        "@types/node-fetch": "^2.5.8",
        "jest": "^26.6.3",
        "rimraf": "^2.7.1",
        "serve": "^11.3.2",
        "ts-jest": "^26.5.3",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.6"
    },
    "dependencies": {
        "@azure/msal-node": "^1.0.1",
        "dotenv": "^8.2.0",
        "node-fetch": "^2.6.1"
    }
}
